{
  "name": "@diegofrayo/validator",
  "version": "1.0.0",
  "description": "Library to validate types and object schemes",
  "license": "MIT",
  "main": "dist/validator.js",
  "module": "dist/validator.mjs",
  "unpkg": "dist/validator.umd.js",
  "homepage": "https://github.com/diegofrayo/code/validator#readme",
  "keywords": [
    "types validator",
    "scheme validator"
  ],
  "bugs": {
    "url": "https://github.com/diegofrayo/code/issues",
    "email": "diegofrayo@gmail.com"
  },
  "author": {
    "name": "Diego Rayo",
    "email": "diegofrayo@gmail.com",
    "url": "https://diegofrayo.netlify.com"
  },
  "repository": {
    "url": "https://github.com/diegofrayo/code.git",
    "type": "git"
  },
  "devDependencies": {
    "@diegofrayo/eslint-config": "1.0.0",
    "eslint": "latest",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "microbundle": "^0.11.0",
    "prettier": "^1.16.4"
  },
  "scripts": {
    "lint": "eslint -c eslintrc.json 'src/**/*.{js,jsx}'",
    "prepublish": "yarn build",
    "test": "echo 'Error no test specified' && exit 1",
    "publish": "npm publish --access public",
    "dev": "microbundle --entry src/index.js --output dist --jsx React.createElement --name @diegofrayo/validator --watch --no-compress",
    "build": "microbundle --entry src/index.js --output dist --jsx React.createElement --name @diegofrayo/validator"
  },
  "files": [
    "dist",
    "package.json",
    "README.md"
  ],
  "engines": {
    "node": ">=8.15.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn test && lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "prettier --write",
      "eslint",
      "git add"
    ]
  }
}
