{
  "name": "@diegofrayo/form",
  "version": "1.0.0",
  "description": "React component to build and validate forms easily",
  "license": "MIT",
  "main": "dist/form.js",
  "module": "dist/form.mjs",
  "unpkg": "dist/form.umd.js",
  "homepage": "https://github.com/diegofrayo/code/form#readme",
  "keywords": [
    "react form",
    "forms validation",
    "forms builder"
  ],
  "bugs": {
    "url": "https://github.com/diegofrayo/code/issues",
    "email": "diegofrayo@gmail.com"
  },
  "author": {
    "name": "Diego Rayo",
    "email": "diegofrayo@gmail.com",
    "url": "https://diegofrayo.netlify.com"
  },
  "repository": {
    "url": "https://github.com/diegofrayo/code.git",
    "type": "git"
  },
  "devDependencies": {
    "@diegofrayo/eslint-config": "1.0.0",
    "eslint": "latest",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "microbundle": "^0.11.0",
    "prettier": "^1.16.4"
  },
  "peerDependencies": {
    "react": "^16.8.4",
    "prop-types": "^15.7.2"
  },
  "scripts": {
    "lint": "eslint -c eslintrc.json 'src/index.jsx'",
    "prepublish": "yarn build",
    "test": "echo 'Error no test specified' && exit 1",
    "upload": "npm publish --access public",
    "dev": "microbundle --entry src/index.jsx --output dist --jsx React.createElement --name @diegofrayo/form --globals prop-types=PropTypes --no-compress --watch",
    "build": "microbundle --entry src/index.jsx --output dist --jsx React.createElement --name @diegofrayo/form --globals prop-types=PropTypes"
  },
  "files": [
    "dist/*.js",
    "dist/*.mjs",
    "package.json",
    "README.md"
  ],
  "engines": {
    "node": ">=8.15.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn test && lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "prettier --write",
      "eslint",
      "git add"
    ]
  }
}
