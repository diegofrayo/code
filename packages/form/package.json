{
  "name": "@diegofrayo/form",
  "version": "1.0.0",
  "description": "React component to build and validate forms easily",
  "license": "MIT",
  "main": "dist/form.js",
  "module": "dist/form.umd.js",
  "homepage": "https://github.com/diegofrayo/code/form#readme",
  "keywords": [
    "react form",
    "forms validation",
    "forms builder"
  ],
  "bugs": {
    "url": "https://github.com/diegofrayo/code/issues",
    "email": "diegofrayo@gmail.com"
  },
  "author": {
    "name": "Diego Rayo",
    "email": "diegofrayo@gmail.com",
    "url": "https://diegofrayo.netlify.com"
  },
  "repository": {
    "url": "https://github.com/diegofrayo/code.git",
    "type": "git"
  },
  "dependencies": {
    "@diegofrayo/validator": "1.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/preset-env": "^7.4.3",
    "@babel/preset-react": "^7.0.0",
    "@diegofrayo/eslint-config": "1.0.0",
    "babel-jest": "^24.7.1",
    "core-js": "3.0.1",
    "eslint": "latest",
    "eslint-plugin-react-hooks": "^1.6.0",
    "husky": "^1.3.1",
    "jest": "^24.7.1",
    "jest-dom": "^3.1.3",
    "lint-staged": "^8.1.5",
    "microbundle": "^0.11.0",
    "prettier": "^1.16.4",
    "react-testing-library": "^7.0.0",
    "regenerator-runtime": "^0.13.2"
  },
  "peerDependencies": {
    "prop-types": "^15.7.2",
    "react": "^16.8.4"
  },
  "scripts": {
    "lint": "eslint -c eslintrc.json 'src/*'",
    "lint:tests": "eslint -c eslintrc-test.json 'tests/**/*.{js,jsx}'",
    "prepublish": "yarn build",
    "test": "jest tests/*.spec.{jsx,js}",
    "upload": "npm publish --access public",
    "dev": "microbundle --entry src/index.jsx --output dist --jsx React.createElement --name @diegofrayo/form --globals prop-types=PropTypes,@diegofrayo/validator=dfr_validator --no-compress --watch",
    "build": "microbundle --entry src/index.jsx --output dist --jsx React.createElement --name @diegofrayo/form --globals prop-types=PropTypes,@diegofrayo/validator=dfr_validator"
  },
  "files": [
    "dist/*.js",
    "dist/*.mjs",
    "package.json",
    "README.md"
  ],
  "engines": {
    "node": ">=8.15.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn test && lint-staged"
    }
  },
  "lint-staged": {
    "src/*.{js,jsx}": [
      "prettier --write",
      "eslint",
      "git add"
    ]
  }
}
